<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Topic</th>
            <th>Title</th>
            <th>Post</th>
            <th>Date</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= post.name %></td>
            <td><%= post.topic %></td>
            <td><%= post.title %></td>
            <td><%= truncate(post.post) %></td>
            <td><%= post.date %></td>
            <% if current_user %>
            <td><%= link_to 'Show', post %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% else %>
            <td> <%= link_to 'Show', post %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<br>

<%= link_to 'New Post', new_post_path %>
